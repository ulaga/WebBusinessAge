<script>
$("#payment").change(function(){
var a=$("#payment").val();
var amt;
if (a=="Business")
 amt=250
else if (a=="General")
amt=300
else if (a=="marketing")
amt=500
else
amt=1000
$("#transaction_amount").val(amt);
});
</script>
<script>
var f1 = new LiveValidation('transaction_card_type');
f1.add( Validate.Presence ); </script>
 <script>
var f2 = new LiveValidation('transaction_card_verification');
f2.add( Validate.Presence ); </script>
 <script>
var f3 = new LiveValidation('transaction_card_number');
f3.add( Validate.Presence ); </script>

